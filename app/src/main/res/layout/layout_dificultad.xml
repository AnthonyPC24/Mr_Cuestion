<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_gravity="center"
    android:layout_marginTop="200dp">

    <ImageButton
        android:id="@+id/btnFacil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:contentDescription="Fácil"
        android:scaleType="centerCrop"
        android:src="@drawable/boton_facil" />

    <ImageButton
        android:id="@+id/btnMedia"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/boton_medio"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="16dp"
        android:contentDescription="Media"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="8dp">

        <ImageView
            android:id="@+id/bgLlama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/flames"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btnDificil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boton_dificil"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:contentDescription="Difícil"/>

    </FrameLayout>

</LinearLayout>